---
import '../styles/global.css' 
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {title} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <meta name="twitter:card" content="summary" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Introducing the Anonymous Incident Reporting App" />
    <meta property="og:description" content="Easily report incidents anonymously and securely with our app." />
    <meta property="og:url" content="https://project-csf-lp.vercel.app" />
    <meta property="og:image" content="thumb.jpg" />
    <meta property="og:site_name" content="Introducing the Anonymous Incident Reporting App">
    <!-- google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">	</head>
	<body class="body">
		<Header />
		<slot />
		<Footer />
	</body>
</html>


<style lang="scss">
  @use '../assets/css/vars.scss' as *;
  @use '../assets/css/mixin.scss' as *;

  .body {
    color: $text;
    font-family: $base-font;
  }

  :global(.titleA) {
    color: $main;
    font-weight: 700;
    font-family: $sub-font;
    line-height: 1;
    text-align: center;
    @include mq-pc {
      font-size: 40px;
      // margin-bottom: 40px;
    }
    @include mq-sp {
      font-size: 28px;
      // margin-bottom: 32px;
    }
  }

  :global(.titleA + *) {
    @include mq-pc {
      margin-top: 64px;
    }
    @include mq-sp {
      margin-top: 40px;
    }
  }
  
  :global(.titleA + .headingA) {
    @include mq-pc {
      margin-top: 24px;
    }
    @include mq-sp {
      margin-top: 24px;
    }
  }

  :global(.headingA) {
    color: $textBlue;
    font-weight: 500;
    text-align: center;
    @include mq-pc {
      font-size: 22px;
    }
    @include mq-sp {
      font-size: 16px;
    }
  }
</style>
